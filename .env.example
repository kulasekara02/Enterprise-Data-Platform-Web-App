# DataOps Dashboard Environment Configuration
# Copy this file to .env and fill in your values

# ==============================================
# Application Settings
# ==============================================
APP_NAME=DataOps Dashboard
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# ==============================================
# Database Configuration (Oracle)
# ==============================================
# For local development with Docker:
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_SERVICE=XEPDB1
ORACLE_USER=dataops
ORACLE_PASSWORD=DataOpsPass123

# Full connection string (alternative)
# DATABASE_URL=oracle+oracledb://dataops:DataOpsPass123@localhost:1521/?service_name=XEPDB1

# Connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# ==============================================
# Redis Configuration
# ==============================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# ==============================================
# JWT Authentication
# ==============================================
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==============================================
# File Upload Settings
# ==============================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=100
ALLOWED_EXTENSIONS=csv,xlsx,xls,json

# ==============================================
# Celery Worker Settings
# ==============================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_TIME_LIMIT=3600
CELERY_WORKER_CONCURRENCY=4

# ==============================================
# Rate Limiting
# ==============================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ==============================================
# Logging
# ==============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ==============================================
# CORS Settings
# ==============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# ==============================================
# External Services (Optional)
# ==============================================
# SMTP for email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=

# Slack notifications
# SLACK_WEBHOOK_URL=

# Sentry error tracking
# SENTRY_DSN=
